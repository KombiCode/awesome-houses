<div class="container m-4">
    <div class="row justify-content-md-center">
      <div class="card col-10 mt-4">
          <div class="text-center p-4">
            <h2><%= @property.title %></h2>
            <% @property.photos.each do |photo| %>
           <div class="img-show">
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
            </div>
            <% end %>
          </div>

        <div class="card description mt-4 p-3">
          <p><%= @property.description %></p>
        </div>
        <div class="col-sm mt-4 p-3">
          <p>Catégorie: <%= @property.category%></p>
          <p>Prix: <%= @property.price%> <i class="fas fa-euro-sign"></i></p>
        </div>


        <div class="card-footer bg-transparent mt-4">
          <div class="col-sm d-flex justify-content-around">
            <p class="btn btn-info"><%= link_to 'Edit', edit_property_path(@property) %></p>
            <p class="btn btn-info"><%= link_to "Destroy", property_path(@property), method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <p class="btn btn-info"><%= link_to 'Book this', new_property_booking_path(@property) %></p>
          </div>
       </div>
 
       <div
        id="booking-form-div"
        data-bookings= <%= @bookings_dates.to_json %>
        >
      </div>

     </div>
   </div>
