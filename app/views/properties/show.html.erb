<div class="details">
    <div class="card1">
      <h3><%= @property.title %></h3>
  </div>
  <div class="card2">
      <h5>A bit more details</h5>
      <p><%= @property.description %></p>
  </div>
<div class="cardright">
  <p><%= @property.category%></p>
      <p><%= @property.price%> <i class="fas fa-euro-sign"></i></p>
</div>

<p><%= link_to 'Edit', edit_property_path(@property) %></p>
<p><%= link_to 'Destroy', property_path(@property), method: :delete, data: { confirm: 'Are you sure?' } %></p>

</div>
