<div class="container m-4">
    <div class="row justify-content-md-center">
      <div class="card col-10 mt-4">
        <div class="text-center p-4">
          <h2><%= @property.title %></h2>
          <% @property.photos.each do |photo| %>
          <div class="img-show">
            <%= cl_image_tag photo.key, height: 400, width: 500, crop: :fit %>
          </div>
          <% end %>
        </div>
        <div class="card description mt-4 p-3">
          <p><%= @property.description %></p>
        </div>
        <div class="col-sm mt-4 p-3">
          <p><b>Catégorie:</b> <%= @property.category%></p>
          <p><b>Adresse:</b> <%= @property.address%></p>
          <p><b>Prix par nuit: </b><%= @property.price%> <i class="fas fa-euro-sign"></i></p>
        </div>


        <div id="map"
          style="width: 500px; height: 300px; margin: auto;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

        <div class="card-footer bg-transparent mt-4">
          <div class="col-sm d-flex justify-content-around">
            <p class="btn btn-green"><%= link_to 'Accueil', root_path %></p>
            <p class="btn btn-pink"><%= link_to 'Réserver', new_property_booking_path(@property) %></p>

            <p class="btn btn-light"><%= link_to 'Modifier', edit_property_path(@property) %></p>
          </div>
       </div>
 
       <div
        id="booking-form-div"
        data-bookings= <%= @bookings_dates.to_json %>
        >
      </div>

     </div>
   </div>
