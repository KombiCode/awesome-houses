<h2><%= @title %></h2>
<div class="row">
<% @properties.each do |property| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to property.title, property_path(property) %></h5>
    </div>
    <div class="card-footer">
      <%= property.price %> <i class="fas fa-euro-sign"></i>
      <%= property.category %>
    </div>
  </div>
<% end %>
</div>
